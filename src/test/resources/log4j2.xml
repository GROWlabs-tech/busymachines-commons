<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR" monitorInterval="30" packages="com.busymachines.commons.logger">
    <Appenders>
        <Elastic name="ElasticAp"
                 hostNames="localhost"
                 port="9300"
                 clusterName="elasticsearch"
                 indexNamePrefix="logger"
                 indexNameDateFormat="yyyy-MM-dd"
                 indexDocumentType="log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Elastic>
    </Appenders>
    <Loggers>
        <Root level="ERROR">
            <AppenderRef ref="ElasticAp"/>
        </Root>
    </Loggers>
</Configuration>